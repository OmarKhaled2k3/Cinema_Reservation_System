<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinema_reservation_system.register_controller">
   <children>
      <StackPane layoutX="203.0" layoutY="14.0" prefHeight="46.0" prefWidth="197.0">
         <children>
            <Label fx:id="registerlabel" alignment="CENTER" prefHeight="59.0" prefWidth="152.0" text="Register">
               <font>
                  <Font size="37.0" />
               </font>
            </Label>
         </children>
      </StackPane>
      <VBox alignment="CENTER" layoutX="140.0" layoutY="93.0" prefHeight="175.0" prefWidth="160.0" spacing="14.0">
         <children>
            <Label fx:id="namelabel" alignment="CENTER" prefHeight="21.0" prefWidth="166.0" text="Enter Your Name:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="usernamelabel" text="Create a Username:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="emailLabel" text="Enter Your E-mail:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="passwoedlabel" text="Create password:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="confirmpasswordlabel" text="Confirm password:">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
      <VBox alignment="CENTER" layoutX="302.0" layoutY="93.0" prefHeight="175.0" prefWidth="160.0" spacing="8.0">
         <children>
            <TextField fx:id="name_field" prefHeight="26.0" prefWidth="160.0" />
            <TextField fx:id="uname_field" />
            <TextField fx:id="email_field" />
            <TextField fx:id="pass_field" />
            <TextField fx:id="cpass_field" />
         </children>
      </VBox>
      <HBox alignment="CENTER" layoutX="32.0" layoutY="317.0" prefHeight="69.0" prefWidth="539.0" spacing="150.0">
         <children>
            <Button fx:id="btn_btl" mnemonicParsing="false" prefHeight="40.0" prefWidth="122.0" onAction="#backToLogin" text="Back To Login">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
            <Button fx:id="btn_reg" mnemonicParsing="false" prefHeight="40.0" prefWidth="80.0" text="Register">
               <font>
                  <Font name="System Bold" size="15.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
