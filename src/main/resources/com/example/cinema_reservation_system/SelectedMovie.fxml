<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="404.0" prefWidth="633.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cinema_reservation_system.HelloController">
    <children>
        <!-- Top Menu Bar -->
        <MenuBar prefHeight="35.0" prefWidth="633.0" style="-fx-background-color: #353238; -fx-min-width: 100%;" />

        <!-- Section Title -->
        <Text fill="WHITE" layoutX="15.0" layoutY="23.0" strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-weight: bold; -fx-font-size: 15;" text="All Films" wrappingWidth="256.8" />

        <!-- Back Button -->
        <Button fx:id="backButton" layoutX="551.0" layoutY="1.0" minHeight="21.0" mnemonicParsing="false" prefHeight="34.0" prefWidth="48.0" style="-fx-background-color: none; -fx-font-size: 12;" text="Back" textAlignment="CENTER" textFill="#ebdfdf">
            <font>
                <Font size="18.0" />
            </font>
            <tooltip>
                <Tooltip text="Go back to the movie list" />
            </tooltip>
        </Button>

        <!-- Movie Poster -->
        <ImageView fx:id="selectedFilmPoster" fitHeight="297.0" fitWidth="193.0" layoutX="44.0" layoutY="71.0" pickOnBounds="true" preserveRatio="true">
            <image>
            </image>
        </ImageView>

        <!-- Movie Title -->
        <Text fx:id="title" fill="black" layoutX="277.0" layoutY="93.0" strokeType="OUTSIDE" strokeWidth="0.0" text="MOVIE TITLE" wrappingWidth="353.3">
            <font>
                <Font size="30.0" />
            </font>
        </Text>

        <!-- Movie Description -->
        <Text fx:id="description" fill="black" layoutX="279.0" layoutY="128.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Description" wrappingWidth="353.3">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <!-- Movie Duration -->
        <Text fill="black" layoutX="266.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Duration:">
            <font>
                <Font size="18.0" />
            </font>
        </Text>
        <Text fx:id="Duration" fill="black" layoutX="334.0" layoutY="300.0" strokeType="OUTSIDE" strokeWidth="0.0" wrappingWidth="100.0">
            <font>
                <Font size="18.0" />
            </font>
        </Text>

        <!-- Book Now Button -->
        <Button fx:id="bookButton" layoutX="495.0" layoutY="334.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="126.0" style="-fx-background-color: white;" text="Book Now">
            <tooltip>
                <Tooltip text="Reserve your tickets now!" />
            </tooltip>
        </Button>
      <HBox layoutX="266.0" layoutY="311.0" prefHeight="34.0" prefWidth="292.0">
         <children>
      
              <!-- Showtimes -->
              <Text fill="black" strokeType="OUTSIDE" strokeWidth="0.0" text="ShowTimes:">
                  <font>
                      <Font size="18.0" />
                  </font>
              </Text>
         </children>
      </HBox>
    </children>
</AnchorPane>
